{
  "name": "java-javadoc-pro",
  "displayName": "Java Javadoc Pro",
  "publisher": "xiyeming",
  "description": "Java的IDEA风格Javadoc和文件头生成器。",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiyeming/java-javadoc-pro.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "redhat.java"
  ],
  "contributes": {
    "commands": [
      {
        "command": "java-javadoc-pro.generateMethodJavadoc",
        "title": "Java Javadoc Pro: Generate Method Javadoc"
      },
      {
        "command": "java-javadoc-pro.generateFileHeader",
        "title": "Java Javadoc Pro: Generate File Header"
      }
    ],
    "keybindings": [
      {
        "command": "java-javadoc-pro.generateMethodJavadoc",
        "key": "ctrl+alt+]",
        "mac": "cmd+alt+]",
        "when": "editorTextFocus && editorLangId == 'java'"
      },
      {
        "command": "java-javadoc-pro.generateFileHeader",
        "key": "ctrl+alt+[",
        "mac": "cmd+alt+[",
        "when": "editorTextFocus && editorLangId == 'java'"
      }
    ],
    "configuration": {
      "title": "Java Javadoc Pro",
      "properties": {
        "javadocPro.author": {
          "type": "string",
          "default": "9527",
          "description": "默认的作者名称"
        },
        "javadocPro.dateFormat": {
          "type": "string",
          "default": "yyyy-MM-dd HH:mm",
          "description": "注释中的日期格式"
        },
        "javadocPro.methodTemplate": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "/**",
            " * @description: ${cursor}",
            " * @author: ${author}",
            " * @date: ${date}",
            " * ${params}",
            " * @return: ${returnType}",
            " */"
          ],
          "description": "方法注释的模板"
        },
        "javadocPro.fileTemplate": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "/**",
            " * @Project: ${projectName}",
            " * @File: ${fileName}",
            " * @Author: ${author}",
            " * @Date: ${date}",
            " * @Description: ${cursor}",
            " */"
          ],
          "description": "文件头注释的模板"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}